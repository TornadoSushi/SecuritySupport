<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <com.infinity.jerry.securitysupport.common.z_utils.z_widget.ZTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height">

    </com.infinity.jerry.securitysupport.common.z_utils.z_widget.ZTitleBar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:gravity="center_vertical"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划名:"
                    android:textColor="@color/level1_gray_dark"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:background="@null"
                    android:singleLine="true"
                    android:textSize="16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/level3_gray_light2" />

            <LinearLayout
                android:id="@+id/llStartTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onDateClick"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始日期:"
                    android:textColor="@color/level1_gray_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvStartTime"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:textColor="@color/color_black" />

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/level3_gray_light2" />

            <LinearLayout
                android:id="@+id/llEndTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onDateClick"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="结束日期:"
                    android:textColor="@color/level1_gray_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:textColor="@color/color_black" />

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/level3_gray_light2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/level3_gray_light2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/level3_gray_light2" />

            <LinearLayout
                android:id="@+id/llPlanType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计划类型:"
                    android:textColor="@color/level1_gray_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvPlanType"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:textColor="@color/color_black" />

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/level3_gray_light2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dip"
                android:background="@color/level3_gray_light2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/level3_gray_light2" />


            <LinearLayout
                android:id="@+id/llChooseCom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:clickable="true"
                android:gravity="center_vertical"
                android:onClick="onClick"
                android:padding="10dip">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="受检企业:"
                    android:textColor="@color/level1_gray_dark"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvCom"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:layout_weight="1"
                    android:textColor="@color/color_black" />

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:scaleType="fitXY"
                    android:src="@mipmap/forward" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/level3_gray_light2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/level3_gray_light2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/normal_dis"
                    android:text="检查方案: "
                    android:textColor="@color/appMainColor"
                    android:textSize="16sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvRestart"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/normal_dis"
                    android:background="@drawable/clear_background"
                    android:gravity="center"
                    android:text="初始化"
                    android:textColor="@color/color_white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvAddLine"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/normal_dis"
                    android:background="@drawable/clear_background"
                    android:gravity="center"
                    android:text="新增行"
                    android:textColor="@color/color_white"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/tvClear"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/normal_dis"
                    android:background="@drawable/clear_background"
                    android:gravity="center"
                    android:text="清除"
                    android:textColor="@color/color_white"
                    android:textSize="10sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/level3_gray_light2" />

            <EditText
                android:id="@+id/edPlan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/normal_dis"
                android:layout_marginRight="@dimen/normal_dis"
                android:layout_marginTop="@dimen/middle_dis"
                android:hint="检查方案描述"
                android:textSize="14sp" />

        </LinearLayout>

    </ScrollView>

    <TextView
        android:id="@+id/tvEnsure"
        style="@style/text_btn_bottom"
        android:text="提交" />


</LinearLayout>
