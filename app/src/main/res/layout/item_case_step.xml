<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="@dimen/middle_dis"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        app:cardBackgroundColor="@color/level4_gray_light3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/middle_dis"
        android:elevation="@dimen/middle_dis"
        app:cardCornerRadius="@dimen/middle_dis">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stepName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="item"
                android:textColor="@color/color_black"
                android:textSize="@dimen/textSize_2" />

            <TextView
                android:id="@+id/stepState"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="state"
                android:textColor="@color/level2_gray_light" />


        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
