<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvSub"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/normal_dis"
            android:paddingRight="@dimen/normal_dis"
            android:singleLine="true"
            android:textColor="@color/color_convert"
            android:textSize="@dimen/textSize_2" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvLevel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingLeft="@dimen/normal_dis"
            android:paddingRight="@dimen/normal_dis"
            android:textColor="@color/nice_drakGray"
            android:textSize="@dimen/textSize_4" />

    </LinearLayout>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical|right"
        android:paddingLeft="@dimen/normal_dis"
        android:paddingRight="@dimen/normal_dis"
        android:textColor="@color/nice_drakGray"
        android:textSize="@dimen/textSize_4" />

    <TextView
        android:id="@+id/tvSuper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/lower_dis"
        android:paddingLeft="@dimen/normal_dis"
        android:paddingRight="@dimen/normal_dis"
        android:paddingTop="@dimen/lower_dis"
        android:textColor="@color/level1_gray_dark"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDescri"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/lower_dis"
        android:paddingLeft="@dimen/normal_dis"
        android:paddingRight="@dimen/normal_dis"
        android:paddingTop="@dimen/lower_dis"
        android:textColor="@color/level1_gray_dark" />

</LinearLayout>
