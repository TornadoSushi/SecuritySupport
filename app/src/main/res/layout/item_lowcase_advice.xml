<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/normal_dis"
    android:paddingRight="@dimen/normal_dis">

    <TextView
        android:id="@+id/companyName"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:textColor="@color/color_black"
        android:textSize="@dimen/textSize_2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/subItem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="@color/nice_drakGray"
            android:textSize="@dimen/textSize_3" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/makeLow"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/middle_dis"
            android:layout_marginTop="@dimen/middle_dis"
            android:background="@drawable/main_btn_background"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:textSize="@dimen/textSize_4" />

    </LinearLayout>


</LinearLayout>
