<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.infinity.jerry.securitysupport.common.z_utils.z_widget.ZTitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBar_height">

    </com.infinity.jerry.securitysupport.common.z_utils.z_widget.ZTitleBar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.infinity.jerry.securitysupport.common.z_utils.z_widget.ZMesuredListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </com.infinity.jerry.securitysupport.common.z_utils.z_widget.ZMesuredListView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/actionBar_height"
                android:layout_margin="@dimen/normal_dis"
                app:cardBackgroundColor="@color/color_main"
                app:cardCornerRadius="@dimen/middle_dis"
                app:cardElevation="@dimen/middle_dis">

                <TextView
                    android:id="@+id/tvFinish"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/actionBar_height"
                    android:gravity="center"
                    android:text="@string/nodanger_finish"
                    android:textColor="@color/color_white" />

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>


</LinearLayout>
